#!/bin/bash
#
# vm-setup - One-time VM configuration for Zoned development
#
# Configures the VM for extension development:
# - Verifies shared folder is mounted
# - Creates symlink to extensions directory
# - Enables the extension
# - Validates setup
#

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

CONFIG_FILE="$HOME/.config/zoned-dev/config"

# Load configuration
if [ ! -f "$CONFIG_FILE" ]; then
    echo -e "${RED}✗ Configuration file not found: $CONFIG_FILE${NC}"
    echo
    echo "Run 'make vm-init' first to create the configuration."
    exit 1
fi

source "$CONFIG_FILE"

echo -e "${BLUE}════════════════════════════════════════════════════════════${NC}"
echo -e "${BLUE}   Zoned VM Setup${NC}"
echo -e "${BLUE}════════════════════════════════════════════════════════════${NC}"
echo
echo "VM: $VM_USER@$VM_IP"
echo "Extension: $EXTENSION_UUID"
echo

# Test SSH connection
echo -e "${BLUE}[1/5]${NC} Testing SSH connection..."
if ! ssh -o ConnectTimeout=5 "$VM_USER@$VM_IP" "exit" 2>/dev/null; then
    echo -e "${RED}✗ Cannot connect to VM${NC}"
    echo
    echo "Make sure:"
    echo "  1. VM is running in GNOME Boxes"
    echo "  2. SSH is installed and running in VM"
    echo "  3. SSH keys are set up: ssh-copy-id $VM_USER@$VM_IP"
    exit 1
fi
echo -e "${GREEN}✓ SSH connection successful${NC}"

# Check shared folder - handle multiple hypervisor types
echo -e "${BLUE}[2/5]${NC} Detecting shared folder mount point..."

# Try Parallels mount first (macOS/Parallels Desktop)
if ssh "$VM_USER@$VM_IP" "test -d /media/psf/zoned/extension" 2>/dev/null; then
    ACTUAL_MOUNT="/media/psf/zoned"
    echo -e "${GREEN}✓ Found Parallels shared folder at: $ACTUAL_MOUNT${NC}"
# Then check if the old direct mount exists (legacy GNOME Boxes)
elif ssh "$VM_USER@$VM_IP" "test -d $VM_SPICE_MOUNT" 2>/dev/null; then
    ACTUAL_MOUNT="$VM_SPICE_MOUNT"
    echo -e "${GREEN}✓ Found shared folder at: $ACTUAL_MOUNT${NC}"
else
    # Look for GVFS WebDAV mount (GNOME Boxes - supports both dav: and dav+sd: protocols)
    echo "Searching for GVFS mount..."
    GVFS_MOUNT=$(ssh "$VM_USER@$VM_IP" "find /run/user/1000/gvfs -maxdepth 1 -name 'dav*:*' -type d 2>/dev/null | head -n1" || echo "")
    
    if [ -z "$GVFS_MOUNT" ]; then
        echo -e "${RED}✗ Shared folder not mounted in VM${NC}"
        echo
        echo "To fix this:"
        echo
        echo "${BLUE}For Parallels Desktop (macOS):${NC}"
        echo "  1. Parallels Desktop → VM Configuration → Options → Sharing"
        echo "  2. Enable 'Share Mac folders with Linux'"
        echo "  3. Add custom folder: $HOST_PROJECT_DIR → Name: zoned"
        echo "  4. In VM, verify: ls /media/psf/zoned"
        echo
        echo "${BLUE}For GNOME Boxes (Linux):${NC}"
        echo "  1. In VM, open file manager (Nautilus)"
        echo "  2. Navigate to: Other Locations → Networks"
        echo "  3. Click on 'Spice client folder' to mount it"
        echo "  4. Then run this script again"
        echo
        echo "If 'Spice client folder' doesn't appear:"
        echo "  • In GNOME Boxes: Right-click VM → Properties → Devices & Shares"
        echo "  • Add shared folder:"
        echo "    - Local Folder: $HOST_PROJECT_DIR"
        echo "    - Name: zoned"
        echo "  • In VM, restart spice service: systemctl --user restart spice-webdavd"
        exit 1
    fi
    
    # Check if the mount has a subdirectory matching the share name
    # (GNOME Boxes may mount the parent folder with subdirectory, or directly)
    if ssh "$VM_USER@$VM_IP" "test -d $GVFS_MOUNT/zoned" 2>/dev/null; then
        ACTUAL_MOUNT="$GVFS_MOUNT/zoned"
        echo -e "${GREEN}✓ Found GVFS mount at: $ACTUAL_MOUNT${NC}"
    else
        ACTUAL_MOUNT="$GVFS_MOUNT"
        echo -e "${GREEN}✓ Found GVFS mount at: $ACTUAL_MOUNT${NC}"
    fi
fi

# Check if extension directory exists in shared folder
echo -e "${BLUE}[3/5]${NC} Checking extension files..."
if ! ssh "$VM_USER@$VM_IP" "test -f $ACTUAL_MOUNT/extension/metadata.json" 2>/dev/null; then
    echo -e "${YELLOW}⚠ Extension files not found in shared folder${NC}"
    echo
    echo "Expected path in VM: $ACTUAL_MOUNT/extension/"
    echo
    echo "Make sure the shared folder is configured correctly."
    echo "The 'extension' directory should be visible in the shared folder."
    exit 1
fi
echo -e "${GREEN}✓ Extension files found${NC}"

# Create extensions directory
echo -e "${BLUE}[4/5]${NC} Creating symlink to extensions directory..."
ssh "$VM_USER@$VM_IP" "mkdir -p ~/.local/share/gnome-shell/extensions"

# Create symlink (using -f to overwrite if exists)
ssh "$VM_USER@$VM_IP" "ln -sfn '$ACTUAL_MOUNT/extension' ~/.local/share/gnome-shell/extensions/$EXTENSION_UUID"

# Verify symlink
if ssh "$VM_USER@$VM_IP" "test -L ~/.local/share/gnome-shell/extensions/$EXTENSION_UUID" 2>/dev/null; then
    echo -e "${GREEN}✓ Symlink created successfully${NC}"
else
    echo -e "${RED}✗ Failed to create symlink${NC}"
    exit 1
fi

# Enable extension
echo -e "${BLUE}[5/5]${NC} Enabling extension..."
ssh "$VM_USER@$VM_IP" "gnome-extensions enable $EXTENSION_UUID 2>/dev/null" || true
echo -e "${GREEN}✓ Extension enabled${NC}"

# Check if schema needs compilation
echo
echo -e "${BLUE}Checking GSettings schema...${NC}"
if ssh "$VM_USER@$VM_IP" "test -d ~/.local/share/gnome-shell/extensions/$EXTENSION_UUID/schemas" 2>/dev/null; then
    echo "Compiling schema..."
    ssh "$VM_USER@$VM_IP" "glib-compile-schemas ~/.local/share/gnome-shell/extensions/$EXTENSION_UUID/schemas/"
    echo -e "${GREEN}✓ Schema compiled${NC}"
else
    echo -e "${YELLOW}⚠ No schemas directory found (this may be OK)${NC}"
fi

echo
echo -e "${GREEN}════════════════════════════════════════════════════════════${NC}"
echo -e "${GREEN}✓ VM Setup Complete!${NC}"
echo -e "${GREEN}════════════════════════════════════════════════════════════${NC}"
echo
echo -e "${BLUE}Next steps:${NC}"
echo
echo "1. Reload GNOME Shell in VM:"
ssh "$VM_USER@$VM_IP" 'echo $XDG_SESSION_TYPE' | grep -q "x11" && \
    echo "   - Press Alt+F2 in VM" && \
    echo "   - Type: r" && \
    echo "   - Press Enter" || \
    echo "   - Log out and log back in (Wayland limitation)"
echo
echo "2. Watch logs from host:"
echo "   make vm-logs"
echo
echo "3. Start developing:"
echo "   - Edit files in: $HOST_PROJECT_DIR"
echo "   - Changes are instantly visible in VM"
echo "   - After saving, reload GNOME Shell (see step 1)"
echo
